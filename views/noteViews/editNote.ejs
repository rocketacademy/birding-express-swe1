<%- include('../partials/header.ejs') %> <% const habitat = data.habitat %> <%=
habitat %>
<a href="/note/single/<%=data[0].id%>">Back</a>
<div class="container">
  <div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-8">
      <form action="/note/edit/<%=data[0].id%>" method="POST">
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="habitat">Habitat</label>
            <input
              type="text"
              class="form-control"
              id="habitat"
              name="habitat"
            />
          </div>
          <div class="form-group col-md-6">
            <label for="behaviour">Behaviour</label>
            <input
              type="text"
              class="form-control"
              id="behaviour"
              name="behaviour"
            />
          </div>
        </div>
        <div class="form-group">
          <label for="flock_size">Flock Size</label>
          <input
            type="text"
            class="form-control"
            id="flock_size"
            placeholder="Flock Size"
            name="flock_size"
          />
        </div>
        <div class="form-group">
          <label for="date">date</label>
          <input type="text" class="form-control" id="date" name="date" />
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
    <div class="col-sm-2"></div>
  </div>
</div>

<%- include('../partials/footer.ejs') %>

<script>
  const habitat = document.getElementById('habitat');
  const behaviour = document.getElementById('behaviour');
  const flock_size = document.getElementById('flock_size');
  habitat.value = '<%= data[0].habitat %>';
  behaviour.value = '<%= data[0].behaviour %>';
  flock_size.value = '<%= data[0].flock_size %>';
</script>
