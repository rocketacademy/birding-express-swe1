<%- include('partials/header', {title: 'create species'}) %>
<div class="container">
  <h1 class="d-flex justify-content-center mb-5">Create new species</h1>
  <form action="/species" method="POST">
    <div class="form-group row">
      <label for="species_name" class="col-sm-3 col-form-label"
        >species name</label
      >
      <div class="col-sm-8">
        <input
          type="text"
          class="form-control"
          id="species_name"
          name="species_name"
        />
      </div>
    </div>
    <div class="form-group row">
      <label for="scientific_name" class="col-sm-3 col-form-label"
        >scientific name</label
      >
      <div class="col-sm-8">
        <input
          type="text"
          class="form-control"
          id="scientific_name"
          name="scientific_name"
        />
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-10">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </div>
  </form>
</div>
<%- include('partials/footer') %>
