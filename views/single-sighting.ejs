<%- include ('partials/header') %> 

    <%- include ('partials/nav') %> 
    <!-- USING JUMBOTRON -->
    <section class="jumbotron my-jumbotron text-center">
      <h1>SIGHTING ID <%= dataForSelectedId.id %></h1>
      <h4 class="">ðŸ‘€</h4>
      <hr class="my-4" />
