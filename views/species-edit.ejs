<%- include('partials/header', {title: 'edit species'}) %>
<div class="container">
  <h1>Edit species</h1>
  <form
    action="/species/<%= speciesToEdit.id %>/edit?_method=PUT"
    method="POST"
  >
    <div class="form-group">
      <label for="species-name">Species name</label>
      <input
        type="text"
        class="form-control"
        id="species-name"
        aria-describedby="emailHelp"
        name="speciesName"
        value="<%= speciesToEdit.name %>"
      />
    </div>
    <div class="form-group">
      <label for="scientific_name">Scientific name</label>
      <input
        type="text"
        class="form-control"
        id="scientific_name"
        name="scientificName"
        value="<%= speciesToEdit.scientific_name %>"
      />
    </div>
    <input type="hidden" name="speciesId" value="<%= speciesToEdit.id %>" />
    <button type="submit" class="btn btn-primary">Submit the edit</button>
  </form>
</div>
<%- include('partials/footer') %>
