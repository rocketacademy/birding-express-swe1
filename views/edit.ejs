    <div class="container entry-form" >
      
    
      
      <div class="row justify-content-center align-items-center" style="height: 80vh">
        <div class="col-12 col-md-10">
        <h2>Edit Form</h2>
      <p>Need to change something?
       </p>
    <form class="entry-form-container" action="/note/<%= noteInfo.id %>/edit?_method=PUT" method="POST" >
  
        <div class="form group">
          <div class="row">
            <div class="col-12">
        <label for="behaviour">Behaviour: </label>
        <textarea class="form-control" rows="5" name="behaviour" id="behaviour"><%= noteInfo.behaviour %></textarea>
        </div>
        </div>
      </div>

      
        <% behaviours.forEach((behaviour) => { %>
       <div class="form-check form-check-inline">
  <input class="form-check-input" type="checkbox" name="behaviour" value="<%= behaviour.action %>" id="behaviour" checked>
  
  <label class="form-check-label" for="behaviour">
    <%= behaviour.action %>
  </label>
  </div>
  <% }) %>
<% allBehaviour.forEach((behaviour) => { %>
  <div class="form-check form-check-inline">
  <input class="form-check-input" type="checkbox" name="behaviour" value="<%= behaviour.action %>" id="behaviour">

  <label class="form-check-label" for="behaviour">
    <%= behaviour.action %>
  </label>

</div>

<% }) %>



    
            <div class="row">
              <div class="col">
      <div class="form-group">
        <label for="flock_size">Flock size: </label>
        <input class="form-control" name="flock_size" id="flock_size" value="<%= noteInfo.flock_size %>"> 
      </div>
      </div>
        <div class="col">
      <div class="form-group">
      <label for="date">Date: </label>
      <input class="form-control" type="text" name="date" id="date" value="<%= noteInfo.date%>">
      </div>
      </div>
      </div>
    
      <div class="form-group">
        <div class="row">
          <div class="col-8 justify-content-start">
        <label for="species_id">Species: </label>
        <select class="form-control" name="species_id" id="species_id" >
          <% data.species.forEach((type) => { %>
            <% if (type.id === noteInfo.species_id) { %>
              <option value="<%= type.id %>" selected><%= type.name %></option>
            <% } else { %>
            <option value="<%= type.id %>"><%= type.name %></option>
          <% } %>
          <% }) %>
        </select>
        </div>
        </div>
        </div>
      
    
        <br><br>
      <button type="submit" class="btn btn-secondary btn-block">Submit</button>
    </form>
        </div>
      </div>
    </div>

     <%- include ('partials/footer') %>